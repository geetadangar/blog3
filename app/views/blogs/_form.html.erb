<%= form_for(@blog,:url => blogs_path(@blog), :method => 'post')do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field(:description) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
