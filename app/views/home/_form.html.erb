<%= form_with url: home_index_path, method: :post do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :discription %>
    <%= form.text_field :discription %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>